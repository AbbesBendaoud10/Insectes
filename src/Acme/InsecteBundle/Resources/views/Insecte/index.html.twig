<div class="container text-center">
<h1>Liste des insectes</h1>
<table border="2" class="table">
    <tr>

        <th>Username</th>
        <th>Email</th>
        <th>Action</th>

    </tr>
    {% for insecte in insectes  %}
        {% if insecte.id!=user %}
    <tr>

        <td>{{ insecte.username }}</td>
        <td>{{ insecte.email }}</td>

{% set nbr=0%}

{% for f in friends %}
    {% if  f.id==insecte.id%}
        {%  set nbr=nbr+1 %}
    {% endif %}
        {% endfor %}

        {% if nbr==0   %}
            <td>  <a href="amitie/{{ insecte.id }}" class="btn btn-danger">Add-Friend</a></td>
        {% endif %}
        {% if nbr>0   %}
            <td>  <a href="noAmitie/{{ insecte.id }}" class="btn btn-primary">RemoveFriend</a></td>
        {% endif %}





    </tr>
    {% endif %}
    {% endfor %}
</table>



</div>
{% endblock %}